{% extends "base.html.twig" %}

{% block title %}Billeterie - {{ event.name }}{% endblock %}

{% block body %}
<div class="container mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-6">
        <h1 class="text-2xl font-bold mb-4">Acheter des billets pour {{ event.name }}</h1>
        <p class="text-gray-700 mb-2"><strong>Lieu:</strong> {{ event.location }}</p>
        <p class="text-gray-700 mb-2"><strong>Date:</strong> {{ event.date|date('d/m/Y') }}</p>
        <p class="text-gray-700 mb-2"><strong>Prix:</strong> {{ event.price }} €</p>

        <form method="POST" action="{{ path('event_confirmation', {'slug': event.slug}) }}">
            <div class="mb-4">
                <label for="quantity" class="block text-gray-700">Quantité:</label>
                <input type="number" id="quantity" name="quantity" class="mt-1 block w-full" min="1" value="1" required>
            </div>
            <div class="mb-4">
                <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg">Acheter</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
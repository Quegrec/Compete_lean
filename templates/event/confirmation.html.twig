{% extends "base.html.twig" %}

{% block title %}Confirmation - {{ event.name }}{% endblock %}

{% block body %}
<div class="container mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-6">
        <h1 class="text-2xl font-bold mb-4">Confirmation d'achat</h1>
        <p class="text-gray-700 mb-2"><strong>Événement:</strong> {{ event.name }}</p>
        <p class="text-gray-700 mb-2"><strong>Lieu:</strong> {{ event.location }}</p>
        <p class="text-gray-700 mb-2"><strong>Date:</strong> {{ event.date|date('d/m/Y') }}</p>
        <p class="text-gray-700 mb-2"><strong>Quantité:</strong> {{ quantity }}</p>
        <p class="text-gray-700 mb-2"><strong>Total:</strong> {{ event.price * quantity }} €</p>
    </div>
</div>
{% endblock %}